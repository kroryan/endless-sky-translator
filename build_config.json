{
  "app": {
    "name": "Traductor Endless Sky",
    "version": "1.0.0",
    "description": "Traductor automático para el juego Endless Sky con interfaz gráfica mejorada",
    "author": "Traductor ES Team",
    "main_script": "run_gui.py",
    "icon": "icon.ico"
  },
  "build": {
    "output_dir": "dist",
    "temp_dir": "build",
    "one_file": true,
    "windowed": true,
    "console": false,
    "upx": true
  },
  "includes": [
    "translator.py",
    "translator_gui.py",
    "requirements.txt",
    "README.md"
  ],
  "hidden_imports": [
    "tkinter",
    "tkinter.ttk",
    "tkinter.filedialog",
    "tkinter.messagebox", 
    "tkinter.scrolledtext",
    "googletrans",
    "requests",
    "chardet",
    "deep_translator",
    "json",
    "threading",
    "queue",
    "pathlib",
    "re",
    "time",
    "unicodedata"
  ],
  "exclude_modules": [
    "matplotlib",
    "numpy",
    "pandas",
    "scipy",
    "pytest",
    "jupyter"
  ],
  "platforms": {
    "windows": {
      "enabled": true,
      "format": "exe",
      "additional_args": ["--disable-windowed-traceback"]
    },
    "linux": {
      "enabled": true,
      "format": "appimage",
      "additional_args": ["--strip"]
    },
    "macos": {
      "enabled": false,
      "format": "app",
      "additional_args": ["--osx-bundle-identifier", "com.traductor.endlesssky"]
    }
  }
}
